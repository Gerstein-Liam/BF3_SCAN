        <TextBox Name="Scan_Rate" HorizontalAlignment="Left" Height="22" Margin="744,68,0,0" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="104"/>
        <Button Name="button_scan" Content="Start scanning" HorizontalAlignment="Left" Margin="744,96,0,0" VerticalAlignment="Top" Width="104" Click="bt_scan" Height="74"/>
