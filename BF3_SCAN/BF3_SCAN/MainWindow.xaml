        <Label Content="Mode" HorizontalAlignment="Left" Margin="354,324,0,0" VerticalAlignment="Top" RenderTransformOrigin="-10.632,2.308"/>
        <TextBox Name="Result_mode" HorizontalAlignment="Left" Height="26" Margin="410,324,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="184"/>
        <Label Content="]" HorizontalAlignment="Left" Margin="540,206,0,0" VerticalAlignment="Top" FontSize="22" Width="35"/>
        <TextBlock HorizontalAlignment="Left" Margin="111,217,0,0" TextWrapping="Wrap" Text="Last Scan" VerticalAlignment="Top" Height="28" Width="81"/>
        <TextBox Name="Result_last_scan" HorizontalAlignment="Left" Height="23" Margin="192,216,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="326,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="84"><Run Text="Scan Duratio"/><Run Text="n"/></TextBlock>
        <TextBox Name="Result_scan_duration" HorizontalAlignment="Left" Height="23" Margin="410,217,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Rectangle Name="Result_matching_rect" Fill="#FFDC0808" HorizontalAlignment="Left" Height="132" Margin="613,218,0,0" Stroke="Black" VerticalAlignment="Top" Width="235"/>
        <Label Name="Result_matching_text" Content="Your map not running now" HorizontalAlignment="Left" Margin="624,243,0,0" VerticalAlignment="Top" FontSize="16" Width="210" Height="84"/>
        <TextBlock HorizontalAlignment="Left" Margin="744,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="19" Width="121"><Run Text="Scan "/><Run Text="Rate [Seconds]"/></TextBlock> 
